<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href='http://fonts.googleapis.com/css?family=Poiret+One|Raleway:700,900,400|Montserrat' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="../fav.css">
</head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <h1 class="brand"> Bored-NYC </h1>
        </div>
        <div class="col-md-2">
          <form class="logout" action='/logout' method="POST">
            <input type="hidden" name="_method" value="PUT">
            <button>Log out</button>
          </form>
        </div>
      </div>

      <div class="row">
      <div class="col-md-6 col-md-offset-4"></div>
      <h1> <%= username['firstname'] %>'s List of Events: </h1>
      <% faves.each do |fav| %>
      <h2>Event: <%= fav.evt_name %></h2>
          <p>Located:<br>
          <%= fav.evt_address %><br>
          <%= fav.evt_city %>
          <%= fav.evt_state %><br>
          <%= fav.evt_phone %><br>
          <br>
          <br>
          <p>Event Description: <%= fav.evt_description %></p>
          <p>Dates Available: <%= fav.evt_date %></p>

          <form action='/remove' method="POST">
            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" name="eventname" value="<%= fav['evt_name'] %>">
            <button>Delete Event</button>
          </form>

          <form action="/map" method="POST">
            <input type="hidden" name="name" value="<%= fav['evt_name'] %>">
            <input type="hidden" name="address" value="<%= fav['evt_address'] %>">
            <input type="hidden" name="city" value="<%= fav['evt_city'] %>">
            <input type="hidden" name="state" value="<%= fav['evt_state'] %>">
            <input type="hidden" name="lat" value="<%= fav['evt_lat'] %>">
            <input type="hidden" name="long" value="<%= fav['evt_long'] %>">
            <button>Map it</button>
            <hr>
          </form>

      <% end %>
      <a href='/events'>Back to Events</a>
    </div>
  </div>


  </body>

</html>
